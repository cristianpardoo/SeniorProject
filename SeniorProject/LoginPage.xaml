<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeniorProject.LoginPage"

             Width="720" Height="1280" BackgroundColor="#202020">

    <ContentPage.Content>
        <Grid>
            <StackLayout Margin="100,132,100,132">
                <Label Text="Can I Park Here?" FontSize="50" HorizontalTextAlignment="Center" TextColor="White" />
                <Label Text="Username" FontSize="30" TextColor="DarkGray" />
                <Entry x:Name="USERNAME" FontSize="30" BackgroundColor="LightGray" TextColor="White"/>
                <Label Text="Password" FontSize="30" TextColor="DarkGray" />
                <Entry x:Name="PASSWORD" FontSize="30" BackgroundColor="LightGray" TextColor="White"/>
                <Button Text="Register a User Account" Margin="0,70,0,0" FontSize="30" BackgroundColor="LightGray" TextColor="#606060"/>
                <Button Text="Login" Margin="0,35,0,0" FontSize="30" BackgroundColor="LightGray" TextColor="#606060"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>