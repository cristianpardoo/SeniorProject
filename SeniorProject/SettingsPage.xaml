<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeniorProject.SettingsPage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout>
        <StackLayout>
        <Label Text="Settings Page" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label Text="Text Notifications" HorizontalOptions="CenterAndExpand"/>
            <Switch IsToggled="false"
            HorizontalOptions="EndAndExpand" />
        </StackLayout>

        <StackLayout Orientation="Horizontal">
        <Label Text="Voice Shortcuts" HorizontalOptions="CenterAndExpand"/>
        <Switch IsToggled="false"
        HorizontalOptions="EndAndExpand" />
        </StackLayout>
    
        <StackLayout Orientation="Horizontal">
            <Label Text="Push Notifications" HorizontalOptions="CenterAndExpand"/>
            <Switch IsToggled="false"
                HorizontalOptions="EndAndExpand" />
        </StackLayout>

    <StackLayout Orientation="Horizontal">
        <Label Text="Text To Speech" HorizontalOptions="CenterAndExpand"/>
        <Switch IsToggled="false"
            HorizontalOptions="EndAndExpand" />
    </StackLayout>
        
    <StackLayout >
            <Button Text="Log Out"
            Clicked="OnButtonClicked" />
     </StackLayout>

    </StackLayout>
</ContentPage>
